<h1>Listing All Items</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Item Description</th>
    <th>Email Address</th>
    <th>Address</th>

<% @items.each do |item| %>
<tr>
  <td><%= item.title %></td> 
  <td><%= item.description %></td> 
  <td><%= item.email %></td>
  <td><%= item.address %></td>
  <td><%= link_to 'edit', edit_item_path(item) %></td>
  <td><%= link_to 'delete', item_path(item), method: :delete, data: {confirm: 'Are you sure?'} %></td>
</tr>
<% end %>
</table>
<%= link_to "Home", "/" %><br>
<%= link_to "Share New Item", "/items/new" %>

